body {
	font-family: helvetica, arial, sans-serif;
	font-size: 13px;
	font-weight: normal;
}

header #plogo {
	background-image:url(<%= asset_path 'logo.png' %>);
	width: 214px;
	height: 65px;
	display:block;
}

header form {
	display: none;
}


#navigation {
	display: block;
	height: 54px;
	left: 216px;
	position: absolute;
	top: 3px;
}

#navigation div > ul, .nav {
	display: inline;
	float: left;
	left: 0;
	margin: 0 10px 0 0;
	position: relative;
}

#navigation div > ul a,
.nav a {
	line-height: 34px;
	display: block;
	float: none;
	padding: 10px 10px 11px;
	text-decoration: none;
}

#navigation a {
	color: #BFBFBF;
	text-shadow: 0 -1px 0 rgba(0, 0, 0,0.25);
}

#navigation > ul > li, .nav > li {
	display: block;
	float: left;
}

#navigation div > ul .active > a, .nav .active > a {
	background-color: rgba(255, 255, 255, 0.15);
}

#navigation h3 a:hover, #navigation .brand:hover, #navigation ul .active > a {
